<h1>Portlandia Dealerships</h1>
<ul>
  <% if @dealerships == nil %>
    <%= "There are no dealerships listed." %>
  <% else %>
    <% @dealerships.each() do |dealership| %>
      <li><a href="/dealerships/<%= dealership.id() %>"><%= dealership.name() %></a></li>
    <% end %>
  <% end %>
</ul>

<form action="/clear" method="post">
  <button type="submit">Clear List</button>
</form>

<form action="/">
  <button type="submit">Go Back</button>
</form>
